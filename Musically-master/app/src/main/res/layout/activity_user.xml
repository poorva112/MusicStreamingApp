<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Welcome, "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/welUsr"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:text="Username"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="176dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Select Account Type"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="244dp" />

        <RadioGroup
            android:id="@+id/radioType"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="284dp">

            <RadioButton
                android:id="@+id/radioFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="checkButton"
                android:layout_marginLeft="20dp"
                android:text="Free"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="checkButton"
                android:layout_marginLeft="20dp"
                android:text="Premium"
                android:textSize="18sp" />

        </RadioGroup>



        <Button
            android:id="@+id/changeType"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Change Account Type"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="354dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:fontFamily="sans-serif-medium"
            android:text="Account Details"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="62dp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Your Account Type"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="436dp" />

        <TextView
            android:id="@+id/accType"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="470dp" />


        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Log Out"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="532dp" />


    </LinearLayout>
</RelativeLayout>